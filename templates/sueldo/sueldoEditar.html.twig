<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalCenter{{ id }}">
    <i class="fas fa-edit"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter{{ id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editar Sueldo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            {{ form_start(formSueldo, {'action': path('sueldo_editar', {'id': id}),'attr':{'class':'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="modal-body">

                <div class="form-group">
                    <label for="categoria"><strong style="color: red">*</strong>Categoria:</label>
                    {{ form_widget(formSueldo.categoria, {'attr':{'class':'form-control text-uppercase'}}) }}
                    <h7 class="text-danger">{{ form_errors(formSueldo.categoria) }}</h7>
                    <div class="invalid-feedback">
                        Campo Obligatorio.
                    </div>
                </div>

                <div class="form-group">
                    <label for="valor"><strong style="color: red">*</strong>Valor:</label>
                    {{ form_widget(formSueldo.valor, {'attr':{'class':'form-control'}}) }}
                    <h7 class="text-danger">{{ form_errors(formSueldo.valor) }}</h7>
                    <div class="invalid-feedback">
                        Campo Obligatorio.
                    </div>
                </div>

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                {{ form_widget(formSueldo.guardar, {'attr':{'class':'btn btn-primary'}}) }}

            </div>
            <h7 style="color: red">*Campos Obligatorios</h7>
            {{ form_end(formSueldo) }}

        </div>
    </div>

</div>