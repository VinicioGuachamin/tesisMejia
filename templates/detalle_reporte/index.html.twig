                <td>{{ detalle_reporte.hr6 ? 'Yes' : 'No' }}</td>
                <td>{{ detalle_reporte.hr7 ? 'Yes' : 'No' }}</td>
                <td>{{ detalle_reporte.hr8 ? 'Yes' : 'No' }}</td>
                <td>{{ detalle_reporte.atrasos ? 'Yes' : 'No' }}</td>
                <td>{{ detalle_reporte.abondonaAula ? 'Yes' : 'No' }}</td>
