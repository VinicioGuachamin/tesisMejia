                <td>{{ detalle_reporte.observaciones }}</td>
                <td>
                    <a href="{{ path('detalle_reporte_show', {'id': detalle_reporte.id}) }}">show</a>
                    <a href="{{ path('detalle_reporte_edit', {'id': detalle_reporte.id}) }}">edit</a>
                </td>
            </tr>
