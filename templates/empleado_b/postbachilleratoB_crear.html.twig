{# SE ACTIVA EL BOTON DE AGREGAR PORQUE AUN NO EXISTE NINGUN REGISTRO#}
    {% if data == false %}
        <div class="text-right" style="padding: 8px">
            <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModalCenter" >
                <i class="fas fa-plus"></i> Agregar
            </button>
        </div>
    {% endif %}

    {# SE DESACTIVA EL BOTON DE AGREGAR PORQUE YA EXISTE REGISTRO#}
    {% if data == true %}
        <div class="text-right" style="padding: 8px">
            <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModalCenter" disabled>
                <i class="fas fa-plus"></i> Agregar
            </button>
        </div>
    {% endif %}

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Registrar Postbachillerato</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            {{ form_start(formEmpleado_b, {'action': path('empleadoB_nuevoPostbachillerato', {'id': id})}) }}
            <div class="modal-body">
                <div class="form-group">
                    <label for="titulo"><strong style="color: red">*</strong>Título Obtenido:</label>
                    {{ form_widget(formEmpleado_b.titulo, {'attr':{'class':'form-control form-control-sm'}}) }}
                </div>
                <div class="form-group">
                    <label for="institucion"><strong style="color: red">*</strong>Institución:</label>
                    {{ form_widget(formEmpleado_b.institucion, {'attr':{'class':'form-control form-control-sm'}}) }}
                </div>
                <div class="form-group">
                    <label for="fecha_titulo"><strong style="color: red">*</strong>Fecha Título:</label>
                    {{ form_widget(formEmpleado_b.fecha_titulo, {'attr':{'class':'form-control form-control-sm'}}) }}
                </div>
                <div class="form-group" style="display: none">
                    <label for="empleado_a">Id EmpleadoA</label>
                    {{ form_widget(formEmpleado_b.empleado_b, {'attr':{'class':'form-control form-control-sm'}}) }}
                </div>

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>

                {{ form_widget(formEmpleado_b.guardar, {'attr':{'class':'btn btn-primary'}}) }}
            </div>

            {{ form_end(formEmpleado_b) }}

        </div>
    </div>
</div>

<p id="idEmpleadoB" style="display: none">{{ id }}</p>

{% block javascripts %}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        //OBTENGO EL ID DEL EMPLEADOA CREADO
        var idEmpleado = document.getElementById("idEmpleadoB").innerText;

        //SETTEO EL ID CON EL QUE SE VA AGUARDAR EL NUEVO BACHILLERATO
        $("#postbachillerato_empleado_b").val(idEmpleado);

    </script>
{% endblock %}